<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/y5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/hulue"
            android:textSize="14sp"
            android:layout_marginLeft="10.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忽略"
            />

        <TextView
            android:id="@+id/denglu"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            />

        <TextView
            android:id="@+id/zhuce"
            android:textSize="14sp"
            android:textColor="#2D91FF"
            android:layout_marginRight="15.5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_marginTop="104dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <ImageView
        android:layout_marginLeft="41dp"
        android:layout_below="@+id/iv_logo"
        android:layout_marginTop="88dp"
        android:id="@+id/imageview_shou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shouji"
        />
    <RelativeLayout
        android:id="@+id/rl_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/iv_logo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="70.5dp"
        android:layout_marginRight="30dp"
        android:background="@color/transparent">
        <EditText
            android:id="@+id/et_account"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号"
            />

        <View
            android:id="@+id/view_account"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/d9d9d9" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/suo"
        android:layout_marginLeft="41dp"
        android:layout_below="@+id/imageview_shou"
        android:layout_marginTop="60.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/suo"
        />

    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="70.5dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/rl_account"
        android:background="@color/transparent">

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入密码"
            />

        <View
            android:id="@+id/view_pwd"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/d9d9d9" />
    </RelativeLayout>
   <RelativeLayout
       android:id="@+id/btn_login"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_below="@+id/rl_pwd"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <Button
           android:id="@+id/button_denglu"
           android:layout_centerHorizontal="true"
           style="@style/bigButton"
           android:textColor="@color/white"
           android:clickable="true"
           android:background="@drawable/bg_stoke_btn_green_true"
           android:text="登 录" />
   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_backpsw"
        android:layout_below="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:layout_marginRight="44dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_backpsw"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:clickable="false"
            android:layout_marginTop="5dp"
            android:textSize="13sp" />

    </RelativeLayout>

        <ImageView
            android:layout_marginTop="35dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rl_backpsw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_login_bg"
            />

</RelativeLayout>